{% extends 'base.html.twig' %}

{% block title %}Mes Recettes
{% endblock %}

{% block body %}
	<div class="container mt-4">
		{% if not recipes.items is same as([]) %}
			<h1>Mes Recettes</h1>

			<div class="count mt-4">
				<h4>Il y a
					{{ recipes.getTotalItemCount }}
					Recette(s).</h4>
				{# <h4>Il y a {{recipes.getTotalItemCount is same as([]) ? "0" : recipes.getTotalItemCount}} recettes.</h4> #}
			</div>

			<table class="table table-hover mt-4">
				<thead>
					<tr>
						<th scope="col">Numéro</th>
						<th scope="col">Nom</th>
						<th scope="col">Prix</th>
						<th scope="col">Difficulté</th>
						<th scope="col">Date de création</th>
						<th scope="col">Edition</th>
						<th scope="col">Suppression</th>
					</tr>
				</thead>

				<tbody>
					{% for recipe in recipes %}
						<tr class="table-primary">
							<th scope="row">{{ recipe.id }}</th>
							<td>{{ recipe.name }}</td>
							<td>
								{% if recipe.price is null %}
									Non Renseigné
								{% else %}
									{{ recipe.price }}
								{% endif %}
							</td>
							<td>{{ recipe.price }}</td>
							<td>
								{% if recipe.difficulty is null %}
									Non Renseigné
								{% else %}
									{{ recipe.difficulty }}
								{% endif %}
							</td>
							<td>{{ recipe.createdAt|date("d/m/Y") }}</td>
							<td>
								Todo
							</td>
							<td>
								Todo
							</td>
						</tr>
					{% endfor %}

				</tbody>
			</table>

			<div class="navigation d-flex justify-content-center mt-4">
				{{ knp_pagination_render(recipes) }}
			</div>
		{% else %}
			<h3>Il n'y a pas de Recettes</h3>
		{% endif %}
	</div>
{% endblock %}
